body {
	color: white;
	/*background-color: #AD2173;*/
	background-color: #732313;
	background-repeat: no-repeat;
	background-position: right top;
	background-attachment: fixed;
	margin-left: 20px;
	margin-right: 40px;
	font-size: 100%;
	font-family: "Lucida Console", Monaco, monospace;
	/*font-family: "Courier New", Courier, monospace;*/
	text-align: center;
}

a:link,
a:visited {
  color: orange;
}

a:hover,
a:active {
  color: green;
}

footer {
	text-align: center;
	color: orange;
	font-style: italic;
	margin-top: 100px;
	margin-bottom: 60px;
}

.hidden {
	display: none;
}

.top_picture {
	float: top;
	padding: 50px;
	width: 500px;
}

.side_picture {
	/* float: right; */
	/* width: 20%; */
	/* height: 30%; */
	padding: 50px;
	width: 275px;
	height: 275px;
	/* transform: scaleX(-1); */
}

.ryuuji {
	width: 20%;
	height: 30%;
}

.samurai {
	width: 275px;
	height: 275px;
}

.profile {
	width: 20%;
	height: 20%;
}

.intro {
    margin-top: 50px;
    margin-right: 50px;
    margin-bottom: 50px;
}

.abouttxt {
    bottom: 200px;
    display: block;
	max-width: 600px;
	text-align: center;
	margin: auto;
}

.links {
	padding: 40px;
	width: 500px;
	height: 400px;
	max-width: 80%;
	margin-bottom: 50px;
    border: 3px solid #FFFFFF;
	display: inline-block;
}

.link_header {
	object-fit: contain;
	max-width: 100%;
	height: 150px;
	float: top;
}

.link_body {
    margin-top: 20px;
    margin-bottom: 20px;
	height: 200px;
    display: block;
}

.footer_icon {
	width: 48px;
	height: 48px;
	margin: 10px;
	color: white;
}

.about {
	float: right;
	margin: auto;
}


