body {
	color: white;
	/*background-color: #AD2173;*/
	background-color: #732313;
	background-repeat: no-repeat;
	background-position: right top;
	background-attachment: fixed;
	margin-left: 20px;
	margin-right: 40px;
	font-size: 100%;
	font-family: "Lucida Console", Monaco, monospace;
	/*font-family: "Courier New", Courier, monospace;*/
	text-align: center;
}

a:link,
a:visited {
  color: orange;
}

a:hover,
a:active {
  color: green;
}

footer {
	text-align: center;
	color: orange;
	font-style: italic;
	margin-top: 60px;
	margin-bottom: 60px;
}

.hidden {
	display: none;
}

.top_picture {
	float: top;
	width: 500px;
}

.side_picture {
	padding: 50px;
	width: 275px;
	height: 275px;
}

.intro {
	width: 600px;
	margin: 50px auto;
}

.ryuuji {
	width: 20%;
	height: 30%;
}

.samurai {
	width: 275px;
	height: 275px;
}

.profile {
	width: 20%;
	height: 20%;
}

.abouttxt {
    bottom: 200px;
    display: block;
	max-width: 600px;
	text-align: center;
	margin: auto;
}

.grid-container {
	display: grid;
	grid-template-columns: auto auto;
	gap: 50px 30px;
	padding: 10px;
}


.card {
	padding: 10px;
    border: 3px solid #FFFFFF;
	box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
	max-width: 550px;
	text-align: center;
	/* margin: auto; */
}
.links {
	padding: 10px;
	width: 550px;
	height: 400px;
    border: 3px solid #FFFFFF;
	display: inline-block;
}

.link_header {
	object-fit: contain;
	/* object-fit: cover; */
	max-width: 90%;
	height: 130px;
}

.link_body {
	min-height: 80px;
	padding: 10px;
}

.link_button {
	margin-bottom: 10px;
}





.footer_icon {
	width: 48px;
	height: 48px;
	margin: 10px;
	color: white;
}

.about {
	float: right;
	margin: auto;
}


